generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

model User {
  id           Int           @id @default(autoincrement())
  name         String?
  phone        String?       @unique
  passwordHash String?
  isGuest      Boolean       @default(false)
  createdAt    DateTime      @default(now())
  appointments Appointment[]
  cartItems    CartItem[]
}

model Service {
  id               Int             @id @default(autoincrement())
  title            String
  shortDescription String?
  fullDescription  String?
  price            Int
  durationMinutes  Int
  photoUrl         String?
  masters          MasterService[]

  appointments Appointment[]
  cartItems    CartItem[]
}

model Master {
  id           Int              @id @default(autoincrement())
  name         String
  bio          String?
  photoUrl     String?
  createdAt    DateTime         @default(now())
  services     MasterService[]
  schedule     MasterSchedule[]
  appointments Appointment[]

  cartItems CartItem[] // <-- добавляем
}

model MasterService {
  master    Master  @relation(fields: [masterId], references: [id])
  masterId  Int
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId Int

  @@id([masterId, serviceId])
}

model MasterSchedule {
  id        Int      @id @default(autoincrement())
  master    Master   @relation(fields: [masterId], references: [id])
  masterId  Int
  dayOfWeek Int // 0-6
  startTime DateTime
  endTime   DateTime
}

model Appointment {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  master    Master   @relation(fields: [masterId], references: [id])
  masterId  Int
  service   Service  @relation(fields: [serviceId], references: [id])
  serviceId Int
  date      DateTime
  time      DateTime
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

model CartItem {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  master    Master?   @relation(fields: [masterId], references: [id])
  masterId  Int?
  service   Service?  @relation(fields: [serviceId], references: [id])
  serviceId Int?
  date      DateTime?
  time      DateTime?
}
